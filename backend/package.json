{
  "name": "flowcrm-backend",
  "version": "1.0.0",
  "description": "FlowCRM Backend API - Property Management CRM",
  "main": "server.js",
  "scripts": {
    "start": "npm run migrate && node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "reset-db": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run migrate && npm run seed",
    "build": "echo 'Build complete - migrations will run at startup'",
    "railway:start": "npm start"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "flowcrm",
    "property-management",
    "crm",
    "real-estate",
    "api",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Costa Ford",
  "license": "MIT"
}
